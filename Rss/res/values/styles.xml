<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
   	<style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
   	    <!-- toolbar颜色 -->
        <item name="colorPrimary">@color/c_tool_bar</item>
        <!-- 状态栏颜色,jar包设置不起作用 -->
        <item name="colorPrimaryDark">#FF0000</item>
        
        <item name="colorAccent">@color/material_deep_teal_200</item>
         <!-- 窗口的背景颜色 -->  
        <item name="android:windowBackground">@android:color/white</item> 
        <!-- SearchView  
        <item name="searchViewStyle">@style/MySearchViewStyle</item>  
        --> 
    </style>
    
   	<style name = "AppTheme" parent="@style/AppBaseTheme"></style>
    
   	<style name = "TextBaseStyle" parent="@style/TextAppearance.AppCompat">
   	    <item name = "android:textColor">@android:color/black</item>
   	</style>
   	
   	<style name = "TextContentTitle" parent="TextBaseStyle">
   	    <item name = "android:textColor">@color/c_text_primary</item>
   	</style>
   	
	<style name = "TextContent" parent="TextBaseStyle">
   	    <item name = "android:textColor">@color/c_text_secondary</item>
   	</style>  	
   	
	
   	<style name="ButtonBaseStyle" parent ="@style/Base.TextAppearance.AppCompat.Button">
   	    <item name = "android:layout_width">200dp</item>
   	    <item name = "android:layout_height">60dp</item>
   	</style>
    
     <style name="ImageToolbarButton" parent="@android:style/Widget.Button">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/btn_icon</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
</resources>
