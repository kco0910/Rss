<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:orientation="vertical" >
    <TextView android:id="@+id/tv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextBaseStyle"
        android:textSize="40sp"
        android:gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:text="@string/make_yours"
        />
	<TextView android:id="@+id/tv2"
	    style="@style/TextBaseStyle"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:layout_marginTop="20dp"
	    android:textColor="@android:color/darker_gray"
	    android:text="@string/no_login_describe"
	    android:layout_below="@+id/tv1"/>
	
	<Button android:id="@+id/btn_add_content"
	    style="@style/ButtonBaseStyle"
	    android:text="@string/add_content"
	    android:layout_marginTop="20dp"
	    android:layout_below="@+id/tv2"
	    android:layout_centerHorizontal="true"/>
	
	
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="@string/exist_user"
	    android:layout_above="@+id/btn_login"
	    android:layout_marginLeft="10dp"
	    android:layout_marginBottom="10dp"/>
	
	<Button android:id="@+id/btn_login"
	    style="@style/ButtonBaseStyle"
	    android:text="@string/login"
	    android:layout_marginBottom="10dp"
	    android:layout_alignParentBottom="true"
	    android:layout_centerHorizontal="true"/>
</RelativeLayout>
